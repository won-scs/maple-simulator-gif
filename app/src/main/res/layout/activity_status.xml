<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center">
  <com.maple_simulator_and_enchantor.adapter_and_ui.SquareImageView2
    android:id="@+id/characterImage"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"/>
  <ScrollView
    android:background="@drawable/inventory_real_base1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2">
    <LinearLayout
      android:layout_gravity="center|top"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="top"
      android:orientation="vertical">
      <TextView
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:id="@+id/characterStatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <TextView
        android:textSize="20sp"
        android:id="@+id/characterDetailStatText"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/characterSetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <TextView
        android:textSize="20sp"
        android:id="@+id/characterDetailStatText2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유니온 효과\n보스 몬스터 공격 시 데미지 40%\n몬스터 방어율 무시 40%\n크리티컬 데미지 40%"/>
      <TextView
        android:textSize="20sp"
        android:id="@+id/characterDetailStatText3"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하이퍼 스탯\n보스 몬스터 공격 시 데미지 30%\n몬스터 방어율 무시 30%\n크리티컬 데미지 10%\n데미지 30%"/>
    </LinearLayout>
  </ScrollView>

</LinearLayout>
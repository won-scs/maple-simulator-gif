<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".activity.PotentialAbilityActivity">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="vertical"
    android:gravity="center"
    tools:ignore="Suspicious0dp">
    <com.maple_simulator_and_enchantor.adapter_and_ui.SquareImageView
      android:id="@+id/AbilityEquipImg"
      android:layout_width="75dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"/>
    <TextView
      android:id="@+id/AbilityEquipNameText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5"
    android:background="@drawable/layout_bottomline"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/cubeInfoTextList"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="7"/>
    <TextView
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="상시 미라클 타임!"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:gravity="center">
      <Spinner
        android:layout_marginStart="20dp"
        android:id="@+id/wantedOptionTypeSpinner"
        android:dropDownWidth="wrap_content"
        android:gravity="end"
        android:layout_width="140dp"
        android:layout_height="wrap_content"/>
      <Spinner
        android:layout_marginStart="10dp"
        android:id="@+id/wantedOptionValueSpinner"
        android:dropDownWidth="wrap_content"
        android:gravity="end"
        android:layout_width="140dp"
        android:layout_height="wrap_content"/>
      <CheckBox
        android:id="@+id/autoOptionChangeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/cubeBtnList"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center">
    <Button
      android:id="@+id/cubeUseBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:backgroundTint="@color/orange"
      android:text="사용하기"/>
  </LinearLayout>
</LinearLayout>